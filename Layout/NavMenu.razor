@using SkopeoWebsite.Components.UI

<!-- Fixed Navigation -->
<nav class="fixed top-0 w-full bg-white/90 backdrop-blur-xl border-b border-white/30 z-50 shadow-xl">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <a href="/" class="text-2xl font-bold bg-gradient-to-r from-cyan-600 to-blue-600 bg-clip-text text-transparent hover:from-cyan-700 hover:to-blue-700 transition-all duration-300">
                        Skopeo Studio
                    </a>
                </div>
            </div>
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-4">
                    <NavLink href="/" class="text-gray-900 hover:text-cyan-600 px-3 py-2 text-sm font-medium transition-colors duration-300" Match="NavLinkMatch.All">
                        Главная
                    </NavLink>
                    <a href="#features" class="text-gray-600 hover:text-cyan-600 px-3 py-2 text-sm font-medium transition-colors duration-300">
                        Возможности
                    </a>
                    <a href="#about" class="text-gray-600 hover:text-cyan-600 px-3 py-2 text-sm font-medium transition-colors duration-300">
                        О нас
                    </a>
                    <NavLink href="/suits" class="text-gray-600 hover:text-cyan-600 px-3 py-2 text-sm font-medium transition-colors duration-300">
                        Костюмы
                    </NavLink>
                    <NavLink href="/survey" class="text-gray-600 hover:text-cyan-600 px-3 py-2 text-sm font-medium transition-colors duration-300">
                        Опросы
                    </NavLink>
                    <NavLink href="/market-research" class="text-gray-600 hover:text-cyan-600 px-3 py-2 text-sm font-medium transition-colors duration-300">
                        Исследования
                    </NavLink>
                    <a href="#contact" class="text-gray-600 hover:text-cyan-600 px-3 py-2 text-sm font-medium transition-colors duration-300">
                        Контакты
                    </a>
                </div>
            </div>
            <Button Variant="Button.ButtonVariant.Primary">
                Начать
            </Button>
            
            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button @onclick="ToggleNavMenu" class="inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cyan-500 transition-all duration-300">
                    @if (collapseNavMenu)
                    {
                        <Icon Name="menu" Size="w-6 h-6" />
                    }
                    else
                    {
                        <Icon Name="x" Size="w-6 h-6" />
                    }
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div class="@($"md:hidden {(collapseNavMenu ? "hidden" : "")} transition-all duration-300")">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white/95 backdrop-blur-xl border-t border-white/30 shadow-lg">
            <NavLink href="/" class="text-gray-900 hover:text-cyan-600 block px-3 py-2 text-base font-medium transition-colors duration-300" Match="NavLinkMatch.All">
                Главная
            </NavLink>
            <a href="#features" class="text-gray-600 hover:text-cyan-600 block px-3 py-2 text-base font-medium transition-colors duration-300">
                Возможности
            </a>
            <a href="#about" class="text-gray-600 hover:text-cyan-600 block px-3 py-2 text-base font-medium transition-colors duration-300">
                О нас
            </a>
            <NavLink href="/suits" class="text-gray-600 hover:text-cyan-600 block px-3 py-2 text-base font-medium transition-colors duration-300">
                Костюмы
            </NavLink>
            <NavLink href="/survey" class="text-gray-600 hover:text-cyan-600 block px-3 py-2 text-base font-medium transition-colors duration-300">
                Опросы
            </NavLink>
            <NavLink href="/market-research" class="text-gray-600 hover:text-cyan-600 block px-3 py-2 text-base font-medium transition-colors duration-300">
                Исследования
            </NavLink>
            <a href="#contact" class="text-gray-600 hover:text-cyan-600 block px-3 py-2 text-base font-medium transition-colors duration-300">
                Контакты
            </a>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}