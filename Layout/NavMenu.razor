@using SkopeoWebsite.Components.UI

<nav class="fixed top-0 w-full bg-white/95 backdrop-blur-xl border-b border-gray-200 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="flex-shrink-0">
                <a href="/" class="text-2xl font-bold text-blue-800 hover:text-blue-700 transition-colors duration-300">
                    Marketing Insights
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-8">
                <NavLink href="/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-base font-medium transition-colors" Match="NavLinkMatch.All">
                    Главная
                </NavLink>
                <NavLink href="/about" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-base font-medium transition-colors">
                    О компании
                </NavLink>
                <NavLink href="/services" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-base font-medium transition-colors">
                    Услуги
                </NavLink>
                <NavLink href="/contacts" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-base font-medium transition-colors">
                    Контакты
                </NavLink>
                <a href="/contacts" class="bg-blue-800 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                    Связаться с нами
                </a>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button @onclick="ToggleNavMenu" class="p-2 rounded-md text-gray-700 hover:text-blue-600">
                    @if (collapseNavMenu)
                    {
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    }
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    @if (!collapseNavMenu)
    {
        <div class="md:hidden bg-white border-t border-gray-200">
            <div class="px-4 py-2 space-y-1">
                <NavLink href="/" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium" Match="NavLinkMatch.All">
                    Главная
                </NavLink>
                <NavLink href="/about" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">
                    О компании
                </NavLink>
                <NavLink href="/services" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">
                    Услуги
                </NavLink>
                <NavLink href="/contacts" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-medium">
                    Контакты
                </NavLink>
                <a href="/contacts" class="bg-blue-800 hover:bg-blue-700 text-white block px-3 py-2 rounded-lg font-medium transition-colors mx-3 mt-2 text-center">
                    Связаться с нами
                </a>
            </div>
        </div>
    }
</nav>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}